<section class="bg-white">
  <div class="mx-auto max-w-5xl px-6 py-16 text-center">
    <div class="flex flex-col items-center justify-center">
      <h2 class="text-3xl font-semibold text-gray-800">Your Bin</h2>
      <div class="w-24 border-b-4 border-yellow-400"></div>
    </div>

    <div class="flex justify-center">
      <div class="block p-6 rounded-lg shadow-lg bg-white max-w-2xl">
        <div class="flex justify-center">

          <div class="px-5 py-4 bg-white border rounded-md shadow">
            <div class="block text-sm font-semibold text-gray-500">Bin creation date</div>
              <div class="block mt-1 text-sm font-regular text-gray-900">
                <p>{{created_at}}</p>
              </div>
            </div>
          </div>

          <br />

          <div class="px-5 py-4 bg-white border rounded-md shadow">
            <div class="block text-sm font-semibold text-gray-500">Requests</div>


              <ul>
                {{#each requests}}
                <div class="block mt-1 text-sm font-regular text-gray-900">
                  <hr>
                  <br />
                  <li class="text-left">
                    <p>HTTP Method: {{this.request_method}} </p>
                    <p>From: {{this.ip_address}}</p>
                    <p>Received at: {{this.received_at}}</p>
                    {{!-- <p>Headers: {{this.headers}}</p> --}}
                    <p>Headers: {{#each headers}}
                      <div>{{@key}}: {{this}}</div>
                      {{/each}}
                    </p>
                    <p>Raw payload: {{this.payload}}</p>
                  </li>
                  <br />
                </div>
                {{/each}}
              </ul>
            </div>
        </div>
      </div>
    </div>

  </div>
</section>
